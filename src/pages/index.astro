---
import Layout from "../layouts/Layout.astro";
import NavBar from "../components/NavBar.astro";
import LinkItem from "../components/LinkItem.astro";
import Projects from "../components/Projects.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Github from "../components/Icons/Github.astro";
import Experience from "../components/Experience.astro";
---

<Layout title="Amadeo Mosquera Capozzi">
  <NavBar />
  <SectionContainer class="md:my-24 my-10" id="home">
    <div
      class="flex mx-auto flex-col space-y-4 mt-24 md:mt-4 items-start md:px-0 px-3"
    >
      <h2 class="text-4xl font-bold text-white">
        Â¡Hello, Im <span
          class="bg-clip-text text-transparent bg-gradient-to-r from-gray-300 via-gray-400 to-gray-500"
          >Amadeo</span
        >!
      </h2>
      <p class="text-neutral-400 w-full md:max-w-2xl">
        Full stack developer, +3 years programming, passionate about backend
        application development.
      </p>
      <LinkItem href="https://github.com/amacapozzi">
        <Github class="size-4" />
        GitHub
      </LinkItem>
    </div>
  </SectionContainer>
  <SectionContainer id="projects" class="md:mt-24 mt-20 md:px-0 px-3">
    <h1 class="text-xl text-neutral-200 font-medium">Selected projects</h1>
    <Projects class="my-5" />
  </SectionContainer>
  <SectionContainer id="experience" class="mt-10 md:px-0 px-3">
    <h1 class="text-xl text-neutral-200 font-medium">Experience</h1>
    <Experience class="my-5" />
  </SectionContainer>
</Layout>
